#include <Servo.h>

#define TRIG_PIN 9
#define ECHO_PIN 8
#define MOISTURE_PIN A0
#define SERVO_PIN 10

Servo sorterServo;

// Change this after checking Serial Monitor
int moistureThreshold = 500;

void setup() {
  pinMode(TRIG_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);

  Serial.begin(9600);

  sorterServo.attach(SERVO_PIN);
  sorterServo.write(90);   // Neutral position
  delay(2000);

  Serial.println("System Ready...");
}

void loop() {

  long distance = getDistance();

  // Step 1: Object detected
  if (distance > 0 && distance <= 10) {
    Serial.println("Object detected. Waiting for moisture contact...");

    delay(1000); // Allow waste to settle

    int moistureValue = analogRead(MOISTURE_PIN);
    Serial.print("Moisture Value: ");
    Serial.println(moistureValue);

    // Step 2: Sorting decision
    if (moistureValue < moistureThreshold) {
      Serial.println("WET waste detected");
      sorterServo.write(180);   // Wet bin
    } 
    else {
      Serial.println("DRY waste detected");
      sorterServo.write(0);     // Dry bin
    }

    delay(2000);               // Hold position

    // Step 3: Reset
    sorterServo.write(90);
    Serial.println("Resetting system...");
    delay(3000);
  }
}

// ---------- Ultrasonic Function ----------
long getDistance() {
  digitalWrite(TRIG_PIN, LOW);
  delayMicroseconds(2);

  digitalWrite(TRIG_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG_PIN, LOW);

  long duration = pulseIn(ECHO_PIN, HIGH, 30000);
  if (duration == 0) return -1;

  long distance = duration * 0.034 / 2;
  return distance;
}
